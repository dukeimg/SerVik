!!!
%html{:prefix => 'og: http://ogp.me/ns#', :lang => @lang}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title= "#{yield(:title)} CRYPTO"
    %meta{:property => 'og:title', :content => "#{yield(:title)} SerVik"}
    %meta{:property => 'og:type', :content => 'website'}
    %meta{:property => 'og:url', :content => @url}
    %meta{:property => 'og:image', :content => ''}
    %meta{:property => 'og:description', :content => t('meta.description')}
    %meta{:property => 'og:locale', :content => @lang}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}
    = csrf_meta_tags
    = action_cable_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = yield
    %footer
      .container-fluid
        .row
          .col-sm-6
            .footer-menu
              %span= "Â© #{Date.today.year} BlackBuild"
              = link_to t('menu.about'), about_path
          .col-sm-6.text-right
            %p.players
              #{t('players_online')}:
              %span#players-online
            :javascript
              $("#players-online").html(localStorage.getItem('players_online'));
